#ifndef FLUID_H
#define FLUID_H

typedef struct FluidCube {
	
	int size;
	float dt;
	float diff;
	float visc;

	float *s;
	float *density;

	float *Vx;
	float *Vy;
	float *Vz;

	float *Vx0;
	float *Vy0;
	float *Vz0;

	FluidCube(int size, int diffusion, int viscosity, float dt);
	~FluidCube();

} FluidCube;


#endif
